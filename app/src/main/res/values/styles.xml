<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSkyBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDarkBlue</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">19sp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:colorControlNormal">@color/colorDarkBlue</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

</resources>
